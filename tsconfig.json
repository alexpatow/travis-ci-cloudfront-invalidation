{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "webpack",
    "jest",
    "jest.config.js",
    "coverage"
  ]
}
